{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "extends": "@tsconfig/node14/tsconfig.json",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./built",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "src/types"
    ],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}