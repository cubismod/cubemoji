{
    "parser": "@typescript-eslint/parser",
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "jasmine": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "uvu"
    ],
    "ignorePatterns": [
        "build/"
    ],
    "rules": {
        "uvu/prefer-is-for-primitives": "error",
        "uvu/no-identical-titles": "error",
        "space-before-function-paren": "off",
        "semi-style": "2"
    }
}